<Window x:Class="UVV_fintech.View.GerenciarTransacoes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Gerenciar Transações"
        Height="500" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#0F172A"
        ResizeMode="NoResize"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">

    <Window.Resources>
        <Style x:Key="CardButtonBase" TargetType="Button">
            <Setter Property="Width" Value="180"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="14"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10"
                                      ShadowDepth="3"
                                      Opacity="0.25"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryCardButton" TargetType="Button" BasedOn="{StaticResource CardButtonBase}">
            <Setter Property="Background" Value="#2563EB"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1D4ED8"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="14"
                                              ShadowDepth="2"
                                              Opacity="0.35"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="GhostButton" TargetType="Button">
            <Setter Property="Foreground" Value="#E5E7EB"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#4B5563"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,3"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="999">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="10,2"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#111827"/>
                    <Setter Property="BorderBrush" Value="#9CA3AF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#334155"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#243047"/>
        </Style>

        <Style x:Key="RightAlignStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#020617" Offset="0"/>
                <GradientStop Color="#0F172A" Offset="0.4"/>
                <GradientStop Color="#1E293B" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Margin="20,20,20,0">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Gerenciar Transações"
                           FontSize="26"
                           FontWeight="SemiBold"
                           Foreground="#F9FAFB"/>
                <TextBlock Text="Veja todas as operações realizadas no sistema"
                           FontSize="14"
                           Foreground="#9CA3AF"
                           Margin="0,4,0,0"/>
            </StackPanel>

            <Button Content="Voltar"
                    DockPanel.Dock="Right"
                    Style="{StaticResource GhostButton}"
                    Click="BtnVoltar_Click"/>
        </DockPanel>

        <Border Grid.Row="1"
                Margin="40,10,40,30"
                CornerRadius="24"
                Background="#111827"
                Padding="20">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Transações registradas"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#E5E7EB"/>
                    <TextBlock Text="  •  histórico completo de operações"
                               FontSize="13"
                               Foreground="#9CA3AF"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <DataGrid x:Name="dgTransacoes"
                          Grid.Row="1"
                          Background="#0F172A"
                          Foreground="White"
                          BorderBrush="Transparent"
                          RowBackground="#1E293B"
                          AlternatingRowBackground="#243047"
                          FontSize="14"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          ItemsSource="{Binding ListaTransacoes}"
                          ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
                          ColumnHeaderHeight="36">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Width="70" Binding="{Binding TransacaoId}"/>
                        <DataGridTextColumn Header="Tipo" Width="160" Binding="{Binding TipoTransacao, StringFormat=N2}" />
                        <DataGridTextColumn Header="Conta" Width="140" Binding="{Binding ContaId}"/>
                        <DataGridTextColumn Header="Valor" Width="120" Binding="{Binding Valor, StringFormat=N2}"
                                             ElementStyle="{StaticResource RightAlignStyle}"/>
                        <DataGridTextColumn Header="Data/Hora" Width="200" Binding="{Binding DataHora, StringFormat=G}"/>
                        <DataGridTextColumn Header="Conta Destino" Width="160" Binding="{Binding ContaDestinoId}"/>
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                    <Button Content="Atualizar" Click="BtnAtualizar_Click" Style="{StaticResource PrimaryCardButton}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
