<Window x:Class="UVV_fintech.View.ManageClienteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="UVV Fintech - Gerenciar Clientes"
        Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#0F172A">

    <Window.Resources>
        <!-- Botão base "card" -->
        <Style x:Key="CardButtonBase" TargetType="Button">
            <Setter Property="Width" Value="180"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="Margin" Value="0,12,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10"
                                      ShadowDepth="3"
                                      Opacity="0.25"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Botão primário -->
        <Style x:Key="PrimaryCardButton" TargetType="Button" BasedOn="{StaticResource CardButtonBase}">
            <Setter Property="Background" Value="#2563EB"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1D4ED8"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="14"
                                              ShadowDepth="2"
                                              Opacity="0.35"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Label -->
        <Style x:Key="FormLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#E5E7EB"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- ListBox -->
        <Style x:Key="ClientesListBoxStyle" TargetType="ListBox">
            <Setter Property="Background" Value="#020617"/>
            <Setter Property="BorderBrush" Value="#334155"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#E5E7EB"/>
            <Setter Property="Margin" Value="0,8,0,0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Fundo gradiente -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#020617" Offset="0"/>
                <GradientStop Color="#0F172A" Offset="0.4"/>
                <GradientStop Color="#1E293B" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0"
                    Margin="20,20,20,10"
                    HorizontalAlignment="Center">
            <TextBlock Text="Gerenciar Clientes"
                       FontSize="26"
                       FontWeight="SemiBold"
                       Foreground="#F9FAFB"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Liste e visualize os clientes cadastrados no banco"
                       FontSize="14"
                       Foreground="#9CA3AF"
                       HorizontalAlignment="Center"
                       Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Card central -->
        <Border Grid.Row="1"
                Margin="40,10,40,30"
                CornerRadius="24"
                Background="#111827"
                Padding="24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Painel esquerdo com botão -->
                <StackPanel Grid.Column="0"
                            Margin="0,0,24,0"
                            VerticalAlignment="Top">
                    <TextBlock Text="Ações"
                               Style="{StaticResource FormLabel}"
                               FontSize="16"
                               FontWeight="SemiBold"/>
                    <Button x:Name="btnListClientes"
                            Content="Listar Clientes"
                            Style="{StaticResource PrimaryCardButton}"
                            Click="btnListClientes_Click"/>
                </StackPanel>

                <!-- Lista de clientes -->
                <StackPanel Grid.Column="1">
                    <TextBlock Text="Clientes cadastrados"
                               Style="{StaticResource FormLabel}"
                               FontSize="16"
                               FontWeight="SemiBold"/>
                    <ListBox x:Name="lstBoxClientes"
                             Style="{StaticResource ClientesListBoxStyle}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,4,0,4"
                                        Padding="8"
                                        CornerRadius="8"
                                        Background="#020617">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Nome}"
                                                   FontWeight="SemiBold"
                                                   Foreground="#F9FAFB"
                                                   FontSize="14"/>
                                        <TextBlock Text="{Binding Cpf, StringFormat='CPF: {0}'}"
                                                   Foreground="#9CA3AF"
                                                   FontSize="12"/>
                                        <TextBlock Text="{Binding Conta.NumeroConta, StringFormat='Conta: {0}'}"
                                                   Foreground="#9CA3AF"
                                                   FontSize="12"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
