<Window x:Class="UVV_fintech.View.MenuInicial"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="UVV Fintech - Menu Inicial"
        Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#0F172A">

    <Window.Resources>
        <!-- Estilo base para botões "card" -->
        <Style x:Key="CardButtonBase" TargetType="Button">
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="90"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="20"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="16"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="12"
                                      ShadowDepth="4"
                                      Opacity="0.25"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Botão primário (Menu Cliente) -->
        <Style x:Key="PrimaryCardButton" TargetType="Button" BasedOn="{StaticResource CardButtonBase}">
            <Setter Property="Background" Value="#2563EB"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1D4ED8"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="16"
                                              ShadowDepth="2"
                                              Opacity="0.35"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Botão secundário (Menu Banco) -->
        <Style x:Key="SecondaryCardButton" TargetType="Button" BasedOn="{StaticResource CardButtonBase}">
            <Setter Property="Background" Value="#10B981"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#059669"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="16"
                                              ShadowDepth="2"
                                              Opacity="0.35"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Fundo em gradiente leve -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#020617" Offset="0"/>
                <GradientStop Color="#0F172A" Offset="0.4"/>
                <GradientStop Color="#1E293B" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0"
                    Margin="0,30,0,10"
                    HorizontalAlignment="Center">
            <TextBlock Text="UVV · FINTECH"
                       FontSize="42"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Sistema financeiro acadêmico · CC4MB"
                       FontSize="16"
                       Foreground="#94A3B8"
                       HorizontalAlignment="Center"
                       Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Card central com os botões -->
        <Border Grid.Row="1"
                Margin="81,10,60,60"
                CornerRadius="24"
                Background="#111827"
                Padding="30">
            <StackPanel VerticalAlignment="Center">
                <TextBlock
                           FontSize="20"
                           FontWeight="SemiBold"
                           Foreground="#E5E7EB"
                           Margin="0,0,0,20"
                           HorizontalAlignment="Center"><Run Text="Menus"/><Run Language="pt-br" Text=":"/></TextBlock>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <!-- Botão Menu Cliente -->
                    <Button x:Name="btnMenuCliente"
                            Content="Menu Cliente"
                            Style="{StaticResource PrimaryCardButton}"
                            Click="BtnMenuCliente_Click"/>
                    <Button x:Name="btnMenuBanco"
                            Content="Menu Banco"
                            Style="{StaticResource SecondaryCardButton}"
                            Click="BtnMenuBanco_Click"/>

                    <!-- Botão Menu Banco -->
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
